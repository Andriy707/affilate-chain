{
  "name": "affiliate-chain",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",

    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs postgres",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",

    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "npx prisma db seed",
    "db:reset-prisma": "npx prisma migrate reset",

    "pgadmin:up": "docker-compose up -d pgadmin",
    "pgadmin:down": "docker-compose stop pgadmin"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "prisma": "^5.6.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}